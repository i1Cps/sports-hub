<mujoco model="quadruped fetch">
  <option timestep="0.002" iterations="1" ls_iterations="5" solver="Newton">
    <flag eulerdamp="disable"/>
  </option>

  <statistic center="0 0 0.1" extent="10.0" meansize="0.04"/>

  <visual>
    <rgba force="1 0 0 1" haze = "0.71 0.71 0.71 0.51" fog="0.71 0.71 0.71 1"/>
    <global azimuth="140" elevation="-20" offwidth="1280" offheight="720"/>
    <quality shadowsize="8192" offsamples="8" numslices="32" numstacks="24" numquads="16"/>
  </visual>

  <asset>

    <texture type="skybox" builtin="gradient" rgb1="0.71 0.71 0.71" rgb2="0.71 0.71 0.71" width="800" height="800"/>
    <texture name="grey_squares" builtin="checker" height="800" width="800" rgb1="0.71 0.71 0.71" rgb2="0.71 0.71 0.71" type="2d" mark="edge" markrgb="1 1 1"/>
    <texture name="football" builtin="checker" mark="cross" width="151" height="151" rgb1="0.1 0.1 0.1" rgb2="0.9 0.9 0.9" markrgb="1 1 1"/>

    <material name="body" rgba=".7 .5 .3 1" specular="0.9" shininess="0.8"/>
    <material name="floor" reflectance="0.2" texrepeat="1 1" texuniform="true" texture="grey_squares"/>
    <!-- <material name="ball" texture="football" /> -->
    <material name="wall" rgba="0.2 0.2 0.2 .1"/>
  </asset>

  <default>
    <geom contype="0" conaffinity="0" condim="3" density="5.0"/>
    <joint armature="1" damping="1" limited="true"/>
    <default class="wall">
      <geom type="plane" material="wall"/>
    </default>
    <default class="quadruped">
      <geom material="body"/>
    </default>
  </default>

  <worldbody>
    <!-- Arena walls + floor -->
    <geom name="floor" pos="0 0 0" size="100 100 0.010" type="plane" material="floor"/>
    <geom name="wall_px" class="wall" pos="-15.7 0 0.7" zaxis="1 0 1" size="1 17 0.5"/>
    <geom name="wall_py" class="wall" pos="0 -15.7 0.7" zaxis="0 1 1" size="17 1 0.5"/>
    <geom name="wall_nx" class="wall" pos="15.7 0 0.7" zaxis="-1 0 1" size="1 17 0.5"/>
    <geom name="wall_ny" class="wall" pos="0 15.7 0.7" zaxis="0 -1 1" size="17 1 0.5"/>

    <!-- Target to get the ball too -->
    <site name="target" type="cylinder" size="0.4 0.01" pos="0 0 0.02" rgba="0.3 0.6 0.3 0.61"/>
    <site name="target_threshold" type="sphere" size="0.40" pos="0 0 0.00" rgba="0.3 0.6 0.3 0.29"/>
    <light name="target_light" pos="0 0 6" diffuse="0.8 0.8 0.8"/>

    <!-- Mel Quadruped -->
    <body name="quadruped" childclass="quadruped" pos="0 0 0.75">
      <light name="tracking_light" pos="0 0 7" dir="0 0 -1" specular="0.8 0.8 0.8" mode="trackcom"/>
      <camera name="cam_default" mode="trackcom" pos="4.660 -4.778 1.745" xyaxes="0.708 0.707 0.000 -0.240 0.241 0.940"/>
      <site name="quadruped" size="0.01" pos="0 0 0"/>
      <geom name="quadruped_torso" pos="0 0 0" size="0.25" type="sphere"/>
      <joint name="quadruped_root" type="free" armature="0" damping="0" limited="false" margin="0.01" pos="0 0 0"/>

      <body name="quadruped_front_left_leg" pos="0 0 0">
        <geom name="quadruped_front_left_aux" fromto="0.0 0.0 0.0 0.2 0.2 0.0" size="0.08" type="capsule"/>
        <body name="quadruped_front_left_aux" pos="0.2 0.2 0">
          <joint name="quadruped_front_left_hip" axis="0 0 1" pos="0.0 0.0 0.0" range="-30 30" type="hinge"/>
          <geom name="quadruped_front_left_leg" fromto="0.0 0.0 0.0 0.2 0.2 0.0" size="0.08" type="capsule"/>
          <body name="quadruped_front_left_knee" pos="0.2 0.2 0">
            <joint name="quadruped_front_left_ankle" axis="-1 1 0" pos="0.0 0.0 0.0" range="30 70" type="hinge"/>
            <geom name="quadruped_front_left_ankle" fromto="0.0 0.0 0.0 0.4 0.4 0.0" size="0.08" type="capsule"/>
            <geom name="quadruped_front_left_foot" pos="0.4 0.4 0" size="0.08" type="sphere" mass="0"/>
          </body>
        </body>
      </body>

      <body name="quadruped_front_right_leg" pos="0 0 0">
        <geom name="quadruped_front_right_aux" fromto="0.0 0.0 0.0 -0.2 0.2 0.0" size="0.08" type="capsule"/>
        <body name="quadruped_front_right_aux" pos="-0.2 0.2 0">
          <joint name="quadruped_front_right_hip" axis="0 0 1" pos="0.0 0.0 0.0" range="-30 30" type="hinge"/>
          <geom name="quadruped_front_right_leg" fromto="0.0 0.0 0.0 -0.2 0.2 0.0" size="0.08" type="capsule"/>
          <body name="quadruped_front_right_knee" pos="-0.2 0.2 0">
            <joint name="quadruped_front_right_ankle" axis="1 1 0" pos="0.0 0.0 0.0" range="-70 -30" type="hinge"/>
            <geom name="quadruped_front_right_ankle" fromto="0.0 0.0 0.0 -0.4 0.4 0.0" size="0.08" type="capsule"/>
            <geom name="quadruped_front_right_foot" pos="-0.4 0.4 0" size="0.08" type="sphere" mass="0"/>
          </body>
        </body>
      </body>

      <body name="quadruped_back_left_leg" pos="0 0 0">
        <geom name="quadruped_back_left_aux" fromto="0.0 0.0 0.0 -0.2 -0.2 0.0" size="0.08" type="capsule"/>
        <body name="quadruped_back_left_aux" pos="-0.2 -0.2 0">
          <joint name="quadruped_back_left_hip" axis="0 0 1" pos="0.0 0.0 0.0" range="-30 30" type="hinge"/>
          <geom name="quadruped_back_left_leg" fromto="0.0 0.0 0.0 -0.2 -0.2 0.0" size="0.08" type="capsule"/>
          <body name="quadruped_back_left_knee" pos="-0.2 -0.2 0">
            <joint name="quadruped_back_left_ankle" axis="-1 1 0" pos="0.0 0.0 0.0" range="-70 -30" type="hinge"/>
            <geom name="quadruped_back_left_ankle" fromto="0.0 0.0 0.0 -0.4 -0.4 0.0" size="0.08" type="capsule"/>
            <geom name="quadruped_back_left_foot" pos="-0.4 -0.4 0" size="0.08" type="sphere" mass="0"/>
          </body>
        </body>
      </body>

      <body name="quadruped_back_right_leg" pos="0 0 0">
        <geom name="quadruped_back_right_aux" fromto="0.0 0.0 0.0 0.2 -0.2 0.0" size="0.08" type="capsule"/>
        <body name="quadruped_back_right_aux" pos="0.2 -0.2 0">
          <joint name="quadruped_back_right_hip" axis="0 0 1" pos="0.0 0.0 0.0" range="-30 30" type="hinge"/>
          <geom name="quadruped_back_right_leg" fromto="0.0 0.0 0.0 0.2 -0.2 0.0" size="0.08" type="capsule"/>
          <body name="quadruped_back_right_knee" pos="0.2 -0.2 0">
            <joint name="quadruped_back_right_ankle" axis="1 1 0" pos="0.0 0.0 0.0" range="30 70" type="hinge"/>
            <geom name="quadruped_back_right_ankle" fromto="0.0 0.0 0.0 0.4 -0.4 0.0" size="0.08" type="capsule"/>
            <geom name="quadruped_back_right_foot" pos="0.4 -0.4 0" size="0.08" type="sphere" mass="0"/>
          </body>
        </body>
      </body>
    </body>

      
    <!-- Ball is modelled programmatically -->
  </worldbody>

  <!-- Quadruped has 8 Actuators -->
  <actuator>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="quadruped_front_left_hip" gear="150"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="quadruped_front_left_ankle" gear="150"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="quadruped_front_right_hip" gear="150"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="quadruped_front_right_ankle" gear="150"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="quadruped_back_left_hip" gear="150"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="quadruped_back_left_ankle" gear="150"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="quadruped_back_right_hip" gear="150"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="quadruped_back_right_ankle" gear="150"/>
  </actuator>

  <contact>
    <!-- Floor contacts -->
    <pair geom1="quadruped_front_left_foot" geom2="floor" friction="1 1 0.5 0.5 0.5"/>
    <pair geom1="quadruped_front_right_foot" geom2="floor" friction="1 1 0.5 0.5 0.5"/>
    <pair geom1="quadruped_back_left_foot" geom2="floor" friction="1 1 0.5 0.5 0.5"/>
    <pair geom1="quadruped_back_right_foot" geom2="floor" friction="1 1 0.5 0.5 0.5"/>
    <pair geom1="quadruped_torso" geom2="floor" friction="1 1 0.5 0.5 0.5"/>

      <!-- Ball contacts are created programmatically -->
  </contact>
</mujoco>
